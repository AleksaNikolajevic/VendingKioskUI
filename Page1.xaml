<Page x:Class="VendingKioskUI.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VendingKioskUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <StackPanel>
            <Button Content="Go to Second Page"
Width="200"
Height="50"
Click="GoToSecondPage_Click"/>
            <DataGrid ItemsSource="{Binding RemovedTags}" AutoGenerateColumns="False" Margin="10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="EPC" Binding="{Binding EPC}" Width="*"/>
                    <DataGridTextColumn Header="TID" Binding="{Binding TID}" Width="*"/>
                    <DataGridTextColumn Header="Last Seen" Binding="{Binding LastSeen}" Width="150"/>
                    <DataGridTextColumn Header="Ime" Binding="{Binding Name}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
